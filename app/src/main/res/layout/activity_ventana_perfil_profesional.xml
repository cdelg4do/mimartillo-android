                            android:layout_height="wrap_content"
                            android:id="@+id/imageView5"
                            android:src="@drawable/ic_nuevaespecialidad" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/VentanaPerfil_txt_agregarEspecialidad"
                            android:id="@+id/textView44"
                            android:textColor="@color/blanco"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="15dp" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/VentanaPerfil_txt_especialidadesSeleccionadas"
                        android:id="@+id/perfPro_txtEspecialidadesSeleccionadas"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:textStyle="italic"
                        android:visibility="visible"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/negro" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:id="@+id/perfPro_listadoEspecialidades"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="10dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/VentanaPerfil_txt_btnEspecialidades"
                        android:id="@+id/perfPro_btnEspecialidades"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/perfPro_layoutOtros"
                android:background="@drawable/fondo_blanco_layout_redondeado"
                android:padding="5dp"
                android:layout_margin="5dp" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/perfPro_layoutOtrosCabecera"
                    android:onClick="onClick_LayoutSecciones">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/VentanaPerfil_txt_otros"
                        android:id="@+id/textView16"
                        android:padding="5dp"
                        android:textStyle="bold|italic"
                        android:textSize="16sp" />
                </FrameLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/perfPro_layoutOtrosDatos"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/VentanaPerfil_txt_otrosExplicacionPro"
