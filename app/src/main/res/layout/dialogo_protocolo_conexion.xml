<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:id="@+id/layout_protocolo"
        android:visibility="visible"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialogo_protocoloConexion_txt_info"
            android:id="@+id/txtInfoProtocolo"
            android:layout_marginRight="10dp"
            android:textStyle="italic"
            android:visibility="visible"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp" />



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|right"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialogo_protocoloConexion_txt_conexion"
                android:id="@+id/textView"
                android:textStyle="italic"
                android:visibility="visible"
                android:textColor="@color/negro" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activada / Desactivada"
                    android:id="@+id/txtEstadoSeguridad"
                    android:textStyle="bold" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/swSeguridad"
                    android:checked="true"
                    android:layout_marginBottom="5dp"
                    android:elegantTextHeight="false"
                    android:layout_marginRight="5dp"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:minWidth="60dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_botones"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_below="@+id/layout_protocolo">

        <Button
            android:id="@+id/btnOk"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@android:string/ok" />

    </LinearLayout>

</RelativeLayout>