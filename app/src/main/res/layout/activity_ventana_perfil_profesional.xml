                                android:layout_marginRight="8dp" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/perfPro_txtEmailContacto"
                                android:textColor="@color/texto_general"
                                android:hint="@string/VentanaPerfil_txt_emailContactoHint"
                                android:textSize="12sp"
                                android:layout_marginTop="5dp"
                                android:inputType="textEmailAddress" />
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/VentanaPerfil_txt_web"
                                android:id="@+id/textView39"
                                android:textStyle="bold"
                                android:textColor="@color/texto_general"
                                android:paddingLeft="5dp"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="8dp" />

                            <EditText
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/perfPro_txtWeb"
                                android:textColor="@color/texto_general"
                                android:hint="@string/VentanaPerfil_txt_webHint"
                                android:inputType="textUri"
                                android:textSize="12sp"
                                android:layout_marginTop="5dp" />
                        </TableRow>

                    </TableLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/VentanaPerfil_txt_btnContacto"
                        android:id="@+id/perfPro_btnContacto"
                        android:layout_gravity="center_horizontal"
