            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/perfPro_layoutEspecialidades"
                android:background="@drawable/fondo_blanco_layout_redondeado"
                android:layout_margin="5dp"
                android:padding="5dp" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/perfPro_layoutEspecialidadesCabecera"
                    android:onClick="onClick_LayoutSecciones" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/VentanaPerfil_txt_especialidades"
                        android:id="@+id/textView42"
                        android:padding="5dp"
                        android:textStyle="bold|italic"
                        android:textSize="16sp" />
                </FrameLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:id="@+id/perfPro_layoutEspecialidadesDatos"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/VentanaPerfil_txt_sinEspecialidades"
                        android:id="@+id/perfPro_txtSinEspecialidades"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:textStyle="italic"
                        android:visibility="visible" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/perfPro_botonNuevaEspecialidad"
