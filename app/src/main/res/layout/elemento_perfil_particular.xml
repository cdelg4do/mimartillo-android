<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/fondo_particular">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:layout_below="@+id/perfil_imgAvatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/perfil_txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="@color/texto_cabeceraPerfil"
            android:text="Nombre Usuario"
            android:textSize="14sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/perfil_txtCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/texto_cabeceraPerfil"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:text="correo@del.usuario"
            android:textStyle="normal"

            android:textSize="12dp" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:src="@drawable/default_avatar"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/perfil_imgAvatar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/elemento_perfilParticular_txt_perfilParticular"
        android:id="@+id/txt_tipoPerfil"
        android:layout_alignTop="@+id/perfil_imgAvatar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:textColor="@color/blanco"
        android:textStyle="bold|italic"
        android:textSize="20sp" />

</RelativeLayout>