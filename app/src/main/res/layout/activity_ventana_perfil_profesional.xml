                        android:textStyle="bold"
                        android:textColor="@color/texto_general"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="10dp" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/perfPro_spnIdioma"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:spinnerMode="dropdown"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/VentanaPerfil_txt_publicidad"
                        android:id="@+id/textView28"
                        android:textStyle="bold"
                        android:textColor="@color/texto_general"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="10dp" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/perfPro_rgrPublicidad">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/VentanaPerfil_txt_publicidadSi"
                            android:id="@+id/perfPro_rbtnPublicidadSi"
                            android:checked="false"
                            android:layout_marginLeft="20dp"
                            android:textSize="12sp" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/VentanaPerfil_txt_publicidadNo"
                            android:id="@+id/perfPro_rbtnPublicidadNo"
                            android:checked="false"
                            android:layout_marginLeft="20dp"
                            android:textSize="12sp" />
                    </RadioGroup>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/VentanaPerfil_txt_btnOtros"
                        android:id="@+id/perfPro_btnOtros"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
